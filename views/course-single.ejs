<%- include('partials/detail-header'); %>
	<div class="all-title-box">
		<div class="container text-center">
			<h1><%= course.title %><span class="m_1"><%= course.short_description %></span></h1>
		</div>
	</div>

    <div id="overviews" class="section wb">
        <div class="container">
            <div class="row"> 
                <div class="col-lg-9 blog-post-single">
                    <div class="blog-item">
						<div class="image-blog">
							<img src="<%= course.image %>" alt="" class="img-fluid">
						</div>
						<div class="post-content">
							<div class="post-date">
								<span class="day">30</span>
								<span class="month">Nov</span>
							</div>
							<div class="meta-info-blog">
								<span><i class="fa fa-calendar"></i> <a href="#"><%= Intl.DateTimeFormat('tr-TR', { year: 'numeric', month: 'long', day: '2-digit'}).format(new Date(course.createdAt)) %></a> </span>
							</div>
							<div class="blog-title">
								<h2><a href="#" title=""><%= course.title %></a></h2>
							</div>
							<div class="blog-desc">
								<blockquote class="default"><%= course.short_description %></blockquote>
								<p><%= course.long_description %></p>
								<% if (typeof user !== 'undefined' && user.role !== 'teacher') { %>
									<% if (user.courses.includes(course._id.toString())) { %>
										<div class="text-center">
											<form action="/courses/leave" method="POST">
												<input type="hidden" name="id" value="<%= course._id %>"/>
												<button type="submit" class="btn btn-danger">Leave Course</button>
											</form>
										</div>
									<% } else { %>
										<div class="text-center">
											<form action="/courses/enroll" method="POST">
												<input type="hidden" name="id" value="<%= course._id %>"/>
												<button type="submit" class="btn btn-warning">Enroll Now</button>
											</form>
										</div>
									<% } %>
								<% } %>
							</div>
						</div>
					</div>

